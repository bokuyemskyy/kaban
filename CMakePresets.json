{
  "version": 3,
  "configurePresets": [
    {
      "name": "default",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "23",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "YES"
      }
    },
    {
      "name": "ninja",
      "binaryDir": "${sourceDir}/build",
      "generator": "Ninja Multi-Config",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "23",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "YES",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CONFIGURATION_TYPES": "Debug;Release"
      }
}

  ],
  "buildPresets": [
    { "name": "release", "configurePreset": "ninja", "configuration": "Release" },
    { "name": "debug",   "configurePreset": "ninja", "configuration": "Debug"   }
  ]
}